/* page/search/index.wxss */



.picker{
  padding: 10px 13px;
  background-color: #FFFFFF;
}
.center-text {
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}

.weui-half-screen-dialog__bd  {
  -webkit-overflow-scrolling: touch;
  
}
.weui-cell__bd + .weui-cell__bd {
  margin-top: 10px; /* 设置按钮之间的垂直间距，可以根据需要调整 */
}

.group {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}

.radio-label {
  flex: 1 0 25%; /* 这会让每个label占用至少20%的宽度，这样一行就能容纳五个label */
  text-align: center; /* 使得radio和label文字在自己的区域内居中 */
  margin-bottom: 10px;
}

.tag-input {
  display: block;
  width: 100%;
  margin-top: 10px;
  padding: 5px;
  border: 1px solid #ccc;
  border-radius: 4px;
  margin-right: 10px;
}

.dialog-button {
  display: block;
  width: 100%;
  margin-top: 10px;
  padding: 10px;
  text-align: center;
  background-color: #1aad19;
  color: white;
  border-radius: 4px;
}
